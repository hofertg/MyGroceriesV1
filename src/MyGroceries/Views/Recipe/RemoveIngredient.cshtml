@{
    ViewData["Title"] = "Remove Ingredients: " + Model.Recipe.Name;
}

@model MyGroceries.ViewModels.RecipeViewModels.RemoveIngredientRecipeViewModel

<h3>Remove Ingredients:</h3>
<form asp-controller="Recipe" asp-action="RemoveIngredient" asp-route-id="@Model.Recipe.ID" method="post">

    @foreach (var ingredient in Model.Items)
    {
        <input type="checkbox" name="ingredientIds" id="@ingredient.ItemID" value="@ingredient.ItemID" />
        <label for="@ingredient.ItemID">
            @ingredient.Item.Name:
            @Math.Round(ingredient.Quantity, 2)
            @if (@ingredient.Item.Unit.Name != "count")
            {
                @ingredient.Item.Unit.Name
            }
        </label>
        <br />
    }
    <input type="submit" value="Remove Selected Ingredient(s)" />
</form>